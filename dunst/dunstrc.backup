[global]
title = Dunst
class = Dunst
monitor = 0
follow = mouse
#geometry = "350x6+24+60"
geometry = "300x6-30+60" # top right
indicate_hidden = yes
shrink = yes

transparency = 0
separator_height = 2
padding = 1
horizontal_padding = 1
frame_width = 0
frame_color = "#3c3836"
separator_color = "#3c3836"

font = "Sans Regular"

line_height = 0
markup = full
format = "<span size='x-large' font_desc='' weight='Bold' foreground='#F5C2E7'>%s</span>\n\n%b"
alignment = center

idle_threshold = 120
show_age_threshold = 60
sort = no
word_wrap = yes
ignore_newline = no
stack_duplicates = false
hide_duplicate_count = yes
show_indicators = no
sticky_history = no
history_length = 20
always_run_script = true
corner_radius = 0
icon_position = left
max_icon_size = 86

icon_path = ~/.icons/Gruvbox-Material-Dark/48x48/actions/:i/~/.icons/Gruvbox-Material-Dark/48x48/apps/:/~/.icons/Gruvbox-Material-Dark/48x48/categories/:/~/.icons/Gruvbox-Material-Dark/48x48/devices/:/~/.icons/Gruvbox-Material-Dark/48x48/emblems/:/~/.icons/Gruvbox-Material-Dark/48x48/emotes/:/~/.icons/Gruvbox-Material-Dark/48x48/mimetypes/:/~/.icons/Gruvbox-Material-Dark/48x48/places/:/~/.icons/Gruvbox-Material-Dark/48x48/status/      

browser = firefox

mouse_left_click = do_action
mouse_middle_click = close_current
mouse_right_click = close_all



[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the "#" and following would be interpreted as a comment.
    background = "#3c3836"
    foreground = "#ebdbb2"
    timeout = 5
    # Icon for notifications with low urgency, uncomment to enable
    #icon = /path/to/icon
    format = "<span foreground='#fbf1c7'><b>%s</b></span>\n%b" 

[urgency_normal]
    background = "#3c3836"
    foreground = "#ebdbb2"
    timeout = 10
    # Icon for notifications with normal urgency, uncomment to enable
    #icon = /path/to/icon
    format = "<span foreground='#fbf1c7'><b>%s</b></span>\n%b"

[urgency_critical]
    background = "#3c3836"
    foreground = "#cc241d"
    timeout = 120
    format = "<span foreground='#cc241d'><b>%s</b></span>\n%b" 
